# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/thermacore_db
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DB=thermacore_db
TIMESCALE_USER=username
TIMESCALE_PASSWORD=password

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# MQTT Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=thermacore_backend
MQTT_KEEPALIVE=60

# WebSocket Configuration
# For development: Use localhost origins
# WEBSOCKET_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# For production: Use HTTPS origins only (wildcards not allowed)
# WEBSOCKET_CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
WEBSOCKET_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
WEBSOCKET_PING_TIMEOUT=60
WEBSOCKET_PING_INTERVAL=25

# OPC UA Configuration (optional)
OPCUA_SERVER_URL=opc.tcp://localhost:4840
OPCUA_USERNAME=
OPCUA_PASSWORD=
OPCUA_SECURITY_POLICY=None
OPCUA_SECURITY_MODE=None
OPCUA_TIMEOUT=30

# Modbus Configuration (optional)
# Enable to log sensitive Modbus data (register addresses, values) for debugging
# SECURITY WARNING: Only enable in development/debugging environments
MODBUS_LOG_SENSITIVE_DATA=false