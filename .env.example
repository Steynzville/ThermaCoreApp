# Docker Compose Environment Variables
# Copy this file to .env and fill in the values

# Database Configuration
DB_NAME=thermacore_db
DB_USER=postgres
DB_PASSWORD=password

# Backend Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION
JWT_ACCESS_TOKEN_EXPIRES=3600

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# MQTT Configuration (optional for development, required for production with TLS)
MQTT_BROKER_HOST=
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=thermacore_backend
MQTT_KEEPALIVE=60
MQTT_USE_TLS=false

# MQTT TLS Certificate Paths (REQUIRED for production)
# These three variables must all be set in production environments
# Paths should point to certificate files accessible by the application
MQTT_CA_CERTS=
MQTT_CERT_FILE=
MQTT_KEY_FILE=

# OPC UA Configuration (optional)
OPCUA_SERVER_URL=
OPCUA_USERNAME=
OPCUA_PASSWORD=
OPCUA_SECURITY_POLICY=None
OPCUA_SECURITY_MODE=None
OPCUA_TIMEOUT=30

# WebSocket Configuration
WEBSOCKET_CORS_ORIGINS=*
WEBSOCKET_PING_TIMEOUT=60
WEBSOCKET_PING_INTERVAL=25

# Frontend Configuration
VITE_API_URL=http://localhost:5000
