# Docker Compose Environment Variables
# Copy this file to .env and fill in the values

# Database Configuration
DB_NAME=thermacore_db
DB_USER=postgres
DB_PASSWORD=password

# Backend Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION
JWT_ACCESS_TOKEN_EXPIRES=3600

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# MQTT Configuration (optional)
MQTT_BROKER_HOST=
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=thermacore_backend
MQTT_KEEPALIVE=60

# OPC UA Configuration (optional)
OPCUA_SERVER_URL=
OPCUA_USERNAME=
OPCUA_PASSWORD=
OPCUA_SECURITY_POLICY=None
OPCUA_SECURITY_MODE=None
OPCUA_TIMEOUT=30

# OPC UA Certificate Paths (required for production security)
# These MUST be set when OPCUA_SECURITY_POLICY and OPCUA_SECURITY_MODE are not "None"
# OPCUA_CERT_FILE=/path/to/client_certificate.pem
# OPCUA_PRIVATE_KEY_FILE=/path/to/client_private_key.pem
# OPCUA_TRUST_CERT_FILE=/path/to/server_trust_certificate.pem
# OPCUA_ALLOW_INSECURE_FALLBACK=false  # Development only

# WebSocket Configuration
WEBSOCKET_CORS_ORIGINS=*
WEBSOCKET_PING_TIMEOUT=60
WEBSOCKET_PING_INTERVAL=25

# Frontend Configuration
VITE_API_URL=http://localhost:5000
